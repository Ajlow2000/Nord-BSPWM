; ----- BSPWM Bars ----- ;
[bar/base]
monitor = ${env:MONITOR:}

width = 100%
height = 30
radius =  15
padding = 2
fixed-center = true

border-size = 10
border-color = #00ffffff

background = ${nord.nord1}
foreground = ${nord.nord4}

line-size = 3
line-color = ${nord.nord11}

font-1 = "hack:size=12;0"

wm-restack = bspwm

cursor-click = pointer

[bar/bspwm]
inherit = bar/base
width = 820

modules-left= bspwm

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[bar/datetime]
inherit = bar/base
width = 250
offset-x = 835

modules-center = date


[bar/sysinfo]
inherit = bar/base
width = 830
offset-x = 1090

modules-left = spotify
modules-right = xkeyboard pulseaudio wlan eth  battery0 battery1




; ----- Modules ----- ;

[module/spotify]
type = custom/script
