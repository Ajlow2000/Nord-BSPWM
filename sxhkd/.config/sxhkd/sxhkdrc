# ---- Basics ----- #

    # Terminal
super + Return
    termite

    # Browser
super + shift + Return
    $BROWSER

    # Graphical Editor
super + c
    $GEDITOR

    # Rofi
super + r
    rofi -show run

    # Open nmtui
super + n
    $TERMINAL -e nmtui

    # Open python term
super + p
    $TERMINAL -e python

    # Graphical File Browser
super + e
    $FILE_EXPLORER

    # Reload sxhkd and bspwm
super + shift + r
    bspc wm -r; dunstify "BSPWM Reloaded"

    # Run Dmenu
super + d
    dmenu_run

    # Open Blueman
super + b
    blueman-manager

    # Open Spectacle
super + s
    spectacle


    # Close Bspwm session
ctrl + alt + l
    dunstify "Closing bspwm"; $HOME/.config/bspwm/close_bspwm

# ----- Navigation -----#

    # Toggle monocle
super + space
    bspc desktop -l next

    # Shift focus / node
super + {_,shift + } {h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

    # Preselect node spawn direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

    # Walk through desktops on current monitor
super + {_,shift + } Tab
    bspc desktop -f {next,prev}

    # Walk through occupied desktops
super + ctrl + {_,shift + } Tab
	bspc desktop -f {next.occupied,prev.occupied}

    # Change Desktop focus
super + {1-9,0}
    bspc desktop -f {1-9,0}

    # Send focused node to desktop
super + shift + {1-9,0}
    bspc node -d {1-9,0} --follow

# ----- Resize ----- #

    # Kill focused container
super + shift + q
    bspc node focused -c

    # expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

    # contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

    # move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

# ----- Media Keys ----- #

XF86AudioMute
    amixer sset Master toggle

XF86Audio{Raise,Lower}Volume
    amixer sset Master 5%{+,-}

# TODO

XF86MonBrightnessUp
    xbacklight -inc 15 && dunstify "Brightness +15"

XF86MonBrightnessDown
    xbacklight -dec 15 && dunstify "Brightness -15"
